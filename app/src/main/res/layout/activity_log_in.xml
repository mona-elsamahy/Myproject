<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signinActivity"
        android:background="#A9FBF6FD"
        android:orientation="vertical" >
    <LinearLayout
            android:orientation="horizontal"
            android:background="#D8673AB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="SMART PARKING APP"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appBar1"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="70dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/logoBar1"
                android:layout_weight="1"/>
    </LinearLayout>


    <TextView
            android:text="LOG IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="40dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#673AB7"
            android:id="@+id/logIn"/>
    <TextView
            android:text="Email :-        "
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:background="#EBFFFFFF"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logInEmail"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="27dp"
            android:background="#EBFFFFFF"
            android:textColor="#FA1B1A1B"
            android:ems="10"
            android:id="@+id/logInEmailText"/>
    <TextView
            android:text="Password :-"
            android:background="#FFFFFF"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logInPassword"/>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="27dp"
            android:background="#EBFFFFFF"
            android:textColor="#131313"
            android:id="@+id/logInPasswordText"/>
    <Button
            android:text="OK"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="27dp"
            android:background="#FFCE29"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/logInButton"/>
    <Button
            android:text=" Forgot password? "
            android:layout_gravity="center"
            android:textSize="18dp"
            android:background="#FFFFFF"
            android:textColor="#A3A1A1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/forgotPasswordButton"/>
    <Button
            android:text="SIGN UP"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signupButton"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signinActivity"
        android:background="#A9FBF6FD"
        android:orientation="vertical" >



<LinearLayout
        android:orientation="horizontal"
        android:background="#D8673AB7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
            android:layout_width="40dp"
            android:background="@drawable/abc_vector_test"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/seeting"
            android:id="@+id/setting"
            android:layout_weight="1"/>
    <TextView
            android:text="SMART PARKING APP"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appBar1"
            android:layout_weight="1"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/logoBar1"
            android:layout_weight="1"/>
</LinearLayout>
    <ImageView
            android:layout_width="450dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/realpark"
            android:id="@+id/realPark"/>
    <TextView
            android:text=" number of available places"
            android:textSize="30dp"
            android:textColor="#292626"
            android:background="#7EE7DCFA"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/numPlaces"/>
    <Button
            android:text="location"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="#95673AB7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button2"/>
    <Button
            android:text="update"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:background="#FFCF40"
            android:layout_height="60dp"
            android:id="@+id/updateButton"/>


</LinearLayout>